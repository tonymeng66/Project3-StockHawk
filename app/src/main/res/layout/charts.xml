<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.GraphActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:layout_marginRight="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- main panel ! start -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Current price and change percentage start !-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="1000"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="+100"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="+10%"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>
            <!--Current price and change percentage end !-->


            <!-- Charts and info start !-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/card_layout_padding">

                <!-- y-label start !-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/ylabel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="12sp"
                        android:text="ylabel1"/>

                    <TextView
                        android:id="@+id/ylabel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="45dp"
                        android:textSize="12sp"
                        android:text="ylabel2"/>

                    <TextView
                        android:id="@+id/ylabel3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="44dp"
                        android:textSize="12sp"
                        android:text="ylabel3"/>

                    <TextView
                        android:id="@+id/ylabel4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="43dp"
                        android:textSize="12sp"
                        android:text="ylabel4"/>

                    <TextView
                        android:id="@+id/ylabel5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="37dp"
                        android:textSize="12sp"
                        android:text="ylabel5"/>

                    <TextView
                        android:id="@+id/ylabel6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="0dp"
                        android:textSize="12sp"
                        android:text="ylabel6"/>

                    <TextView
                        android:id="@+id/ylabel7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="22dp"
                        android:textSize="12sp"
                        android:text="ylabel7"/>

                    <TextView
                        android:id="@+id/ylabel8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="22dp"
                        android:textSize="12sp"
                        android:text="ylabel8"/>

                    <TextView
                        android:id="@+id/ylabel9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="22dp"
                        android:textSize="12sp"
                        android:text="ylabel9"/>


                </LinearLayout>
                <!-- y-label end !-->


                <!-- chart start !-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="21"
                    android:padding="@dimen/card_layout_padding">

                <!-- price chart start !-->
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="@dimen/card_view_padding"
                    card_view:cardBackgroundColor="#363a44"
                    card_view:cardCornerRadius="@dimen/card_view_roundcorner">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <include layout="@layout/price_chart_units" android:id="@+id/price_unit"/>

                        <com.db.chart.view.LineChartView
                            xmlns:chart="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/chart2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            chart:chart_axisColor="#66666666"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <!-- price chart end !-->

                <!-- volume chart !-->
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card6"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="@dimen/card_view_padding"
                    card_view:cardCornerRadius="@dimen/card_view_roundcorner"
                    card_view:cardBackgroundColor="#363a44">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <include layout="@layout/volume_chart_units" android:id="@+id/volume_unit"/>

                        <com.db.chart.view.BarChartView
                            xmlns:chart="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/chart6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            chart:chart_axisColor="#66666666"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <!-- volume chart end!-->

                <!-- x-label start !-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="xlabel1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_marginLeft="18dp"
                        android:text="xlabel2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_marginLeft="18dp"
                        android:text="xlabel3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_marginLeft="18dp"
                        android:text="xlabel4"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_marginLeft="18dp"
                        android:text="xlabel5"/>


                </LinearLayout>
                <!-- x-label end !-->

                </LinearLayout>
                <!-- chart end !-->

                <!-- info start !-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textSize="10sp"-->
                        <!--android:text="information  XXXXX"/>-->

                </LinearLayout>
                <!-- info end !-->

            </LinearLayout>
            <!--Charts and info end !-->

        </LinearLayout>
        <!--main panel end !-->


    </android.support.v4.widget.NestedScrollView>



</android.support.design.widget.CoordinatorLayout>